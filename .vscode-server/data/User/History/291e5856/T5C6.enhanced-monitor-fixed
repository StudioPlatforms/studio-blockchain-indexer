FROM ubuntu:22.04

# Install required packages
RUN apt-get update && apt-get install -y \
    curl \
    postgresql-client \
    docker.io \
    cron \
    gzip \
    findutils \
    grep \
    && rm -rf /var/lib/apt/lists/*

# Create directories
RUN mkdir -p /var/log /var/backups/indexer /app /project

# Set environment variables
ENV INDEXER_HOST=indexer \
    INDEXER_PORT=3000 \
    DB_HOST=postgres \
    DB_PORT=5432 \
    DB_NAME=studio_indexer_new \
    DB_USER=new_user \
    DB_PASSWORD=new_strong_password \
    CHECK_INTERVAL=60 \
    LOG_FILE=/var/log/enhanced-monitor.log \
    BACKUP_DIR=/var/backups/indexer \
    DOCKER_COMPOSE_FILE=/project/docker-compose.yml

# Set working directory
WORKDIR /app

# Copy the fixed monitor script
COPY enhanced-monitor-fixed.sh /app/enhanced-monitor.sh
RUN chmod +x /app/enhanced-monitor.sh

# Command to run
CMD ["/bin/bash", "-c", "/app/enhanced-monitor.sh"]
